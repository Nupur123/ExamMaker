<Window x:Class="ExamMaker.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="657" Width="849">
    <Grid Margin="0,0,18,17">
        <Menu x:Name="MenuBar" Height="25" Margin="0,0,-22,0" VerticalAlignment="Top" >
            <MenuItem x:Name="File" Header="_File" >
                <MenuItem x:Name="New" Header="_New..." />
                <Separator />
                <MenuItem x:Name="Open" Header="_Open..." Click="Open_Click" />
                <Separator />
                <MenuItem x:Name="Save" Header="_Save" />
                <MenuItem x:Name="Save_As" Header="_Save As..." />
                <Separator />
                <MenuItem x:Name="Exit" Header="_Exit" />
            </MenuItem>
            <MenuItem Header="_Help" />
        </Menu>
        <ProgressBar HorizontalAlignment="Left" Height="43" Margin="255,95,0,0" VerticalAlignment="Top" Width="190"/>
        <FlowDocumentReader Name="FlowDocReader" Background="LightBlue" Margin="445,325,353,269" Visibility="Hidden">

        </FlowDocumentReader>
        <TextBox x:Name="status" HorizontalAlignment="Left" Height="70" Margin="10,529,0,0" TextWrapping="Wrap" Text="status" VerticalAlignment="Top" Width="813"/>
        <TreeView HorizontalAlignment="Left" Height="415" Margin="0,95,0,0" VerticalAlignment="Top" Width="190"/>
    </Grid>
</Window>
